{
    "manifest_version": 3,
    "name": "Scouter",
    "description": "Bridging the gap between theory and practice.",
    "version": "0.8.60",
    "action": {
        "default_icon": "icon48.png",
        "default_popup": "popup.html"
    },
    "commands": {
        "scout": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Scout"
        }
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "js/vendor.js",
            "js/content_script.js"
        ]
    }],
    "background": {
        "service_worker": "js/background.js"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "storage",
        "contextMenus",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}